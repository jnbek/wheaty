#main.clearfix
  .article
    :if article.version
      %a.sha-version{ href: "/#{article.version}/#{article.name}" } Static Version
    %h1
      %a{href: "/" + article.name}&= article.title
    = markdownEncode(article.markdown)
    %hr{style:"clear:both"}
  #disqus_thread
  :script
    var disqus_identifier = "#{article.name}",
        disqus_shortname = 'ztrix-blog',
        disqus_title = "#{article.name}";
  %script(src="http://ztrix-blog.disqus.com/embed.js" async type="text/javascript")

#sidebar
  #author= markdownEncode(description)
